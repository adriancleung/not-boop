{
  "name": "not-boop",
  "version": "0.1.0",
  "description": "Definitely not boop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron-toolkit": "electron ./node_modules/electron-toolkit"
  },
  "build": {
    "appId": "com.adriancleung.notboop",
    "copyright": "Copyright Â© 2020 adriancleung",
    "productName": "Not Boop",
    "electronVersion": "11.0.1",
    "asar": true,
    "directories": {
      "buildResources": "../build",
      "output": "../dist"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "public.app-category.developer-tools",
      "icon": "../build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "../build/icon.ico"
    }
  },
  "repository": "https://github.com/adriancleung/not-boop",
  "keywords": [
    "editor",
    "text",
    "format"
  ],
  "author": "adriancleung",
  "license": "MIT",
  "devDependencies": {
    "electron": "^11.0.1",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "electron-reload": "^1.5.0",
    "fuse.js": "^6.4.3"
  }
}
